<div class="flex flex-col h-screen">
<div class="navigation">
  <ul class="flex justify-between p-4 blue-btn items-center">
  <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %></li>   
   <li> <h2>FORGOT PASSWORD</h2></li>   
  </ul>
</div>
<DIV class ='w-full p-3 mt=3em rounded flex justify-between card-item'>
 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">   
    <%= f.email_field :email, autofocus: true, class: 'w-full  email', placeholder: 'Email' %>
  </div>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'blue-btn w-full p-4 border-e-2' %>
  </div>
<% end %>
</DIV>
</div>

